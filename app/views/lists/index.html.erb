<div class="alert <%= alert %>" role="alert">
  <p id="notice"><%= notice %></p>
</div>

<h1 class="text-primary">List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Item</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.item %></td>
        <td><%= list.value %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p class="lead">Value Total:  <b><%= number_to_currency(@sumValue, :unit => "$") %></b> </p>
<p class="lead">Number of Items: <b><%= @itemNum %></b> </p>



<%= link_to 'New Item', new_list_path %>
<p><%= link_to "Printable List (PDF)", lists_path(@list, format: "pdf") %></p>

